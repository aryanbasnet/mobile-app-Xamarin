<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStoreApp.Views.CartPage"
             Title="Shopping Cart">

    <ContentPage.Content>
        <Grid RowDefinitions="*, Auto">
            <!-- Cart Items List -->
            <CollectionView ItemsSource="{Binding Items}" Grid.Row="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="12" Margin="10" Padding="10" HasShadow="True" BackgroundColor="White">
                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                                <Image Grid.Column="0"
                                       Source="{Binding Product.ImageUrl}"
                                       HeightRequest="80"
                                       WidthRequest="80"
                                       Aspect="AspectFill"/>

                                <StackLayout Grid.Column="1" Padding="10,0">
                                    <Label Text="{Binding Product.Name}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Product.Price, StringFormat='${0:F2}'}"
                                           TextColor="#4CAF50"/>

                                    <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,6,0,0">
                                        <Button Text="-" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#4CAF50" TextColor="White" Clicked="OnDecreaseClicked" CommandParameter="{Binding .}" />
                                        <Label Text="{Binding Quantity}" VerticalOptions="Center" />
                                        <Button Text="+" WidthRequest="36" HeightRequest="36" CornerRadius="18" BackgroundColor="#4CAF50" TextColor="White" Clicked="OnIncreaseClicked" CommandParameter="{Binding .}" />
                                    </StackLayout>
                                </StackLayout>

                                <Button Grid.Column="2"
                                        Text="Remove"
                                        BackgroundColor="#f44336"
                                        TextColor="White"
                                        WidthRequest="70"
                                        HeightRequest="36"
                                        VerticalOptions="Start"
                                        Clicked="OnRemoveClicked"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Checkout Section -->
            <Frame Grid.Row="1" 
                   BackgroundColor="White" 
                   Padding="15">
                <StackLayout>
                    <Grid ColumnDefinitions="*, Auto" 
                          Margin="0,0,0,10">
                        <Label Text="Total:" 
                               FontSize="18"
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding TotalPrice, StringFormat='${0:F2}'}" 
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4CAF50"
                               Grid.Column="1"/>
                    </Grid>
                    
                    <Button Text="Proceed to Checkout" 
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnCheckoutClicked"/>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>