<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookStoreApp.Views.ProductDetailsPage"
             Title="Product Details">
    
    <ScrollView>
        <StackLayout Padding="15">
            <!-- Product Image -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="0" 
                   HeightRequest="300">
                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="300"/>
            </Frame>

            <!-- Product Info -->
            <StackLayout Padding="15">
                <Label Text="{Binding Name}" 
                       FontSize="24" 
                       FontAttributes="Bold"/>
                
                <Label Text="{Binding Price, StringFormat='${0:F2}'}" 
                       FontSize="22" 
                       TextColor="#4CAF50"
                       Margin="0,10"/>

                <Label Text="Description" 
                       FontAttributes="Bold"
                       FontSize="18"
                       Margin="0,10,0,5"/>
                
                <Label Text="{Binding Description}"
                       TextColor="#666"/>

                <!-- Quantity -->
                <Label Text="Quantity" 
                       FontAttributes="Bold"
                       FontSize="18"
                       Margin="0,15,0,5"/>
                
                <Frame BackgroundColor="#f5f5f5" 
                       Padding="10" 
                       CornerRadius="10">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                        <Button Text="-" 
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Clicked="OnDecreaseQuantity"/>
                        <Label x:Name="QuantityLabel" Text="1" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="18"
                               Margin="15,0"/>
                        <Button Text="+" 
                                WidthRequest="40"
                                HeightRequest="40"
                                CornerRadius="20"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Clicked="OnIncreaseQuantity"/>
                    </StackLayout>
                </Frame>

                <!-- Add to Cart Button -->
                <Button Text="Add to Cart" 
                        x:Name="AddToCartButton"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="50"
                        Margin="0,20,0,0"
                        Clicked="OnAddToCartClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>